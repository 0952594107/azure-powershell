<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\tools\Common.Netcore.Dependencies.targets" />

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>Microsoft.Azure.Commands.Common.Compute</AssemblyName>
    <RootNamespace>Microsoft.Azure.Commands.Common.Compute</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <OutputPath>$(SolutionDir)artifacts\$(Configuration)</OutputPath>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup>
    <Title>Microsoft Azure PowerShell Compute</Title>
    <Description>Microsoft Azure PowerShell Compute library</Description>
    <PackageTags>azure;powershell;compute</PackageTags>
    <Authors>Microsoft Corporation</Authors>
    <Copyright>Copyright Â© Microsoft Corporation</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Azure/azure-powershell/preview/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Azure/azure-powershell</PackageProjectUrl>
    <PackageOutputPath>$(SolutionDir)artifacts\Package\$(Configuration)</PackageOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DelaySign>false</DelaySign>
    <DefineConstants>TRACE;DEBUG;NETSTANDARD</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <SignAssembly>true</SignAssembly>
    <DelaySign>true</DelaySign>
    <AssemblyOriginatorKeyFile>MSSharedLibKey.snk</AssemblyOriginatorKeyFile>
    <DefineConstants>TRACE;RELEASE;NETSTANDARD;SIGN</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Commands.Common\Common.Netcore.csproj" />
    <ProjectReference Include="..\Commands.ResourceManager.Common\Common.ResourceManager.Netcore.csproj" />
  </ItemGroup>
  
</Project>
